        <header id="lesson-title">Lesson 1: Functions in Python</header>

        <div id="lesson">
            <!-- نفس المحتوى مع id لتغيير النص -->
            <div id="avatar-container" class="grid-item">
                <div id="avatar">AI Tutor</div>
            </div>

            <div id="function-container" class="grid-item">
                <h3 id="func-title">Required Function</h3>
                <pre id="function-code">def greet(name):
    return f"Hello, {name}!"</pre>
                <p id="func-desc">This function takes a name and returns a greeting. Use <code>return</code> to send back the result.</p>
            </div>

            <div id="editor-container" class="grid-item">
                <h3 id="editor-title">Try the Code Here</h3>
                <textarea id="code-editor" placeholder="Write here... e.g., print(greet('Ahmed'))"></textarea>
            </div>

            <div id="controls-container" class="grid-item">
                <h3 id="chat-title">Interact with AI</h3>
                <textarea id="chat-input" placeholder="Ask a question... e.g., What's the difference between print and return?"></textarea>
                <button id="chat-send" onclick="sendChat()">Send</button>
                <button id="code-check" onclick="checkCode()">Check Code</button>
                <p id="feedback"></p>
            </div>
        </div>
    </div>

    <script>
        let isArabic = false;

        // دالة لتغيير اللغة في صفحة الكورس
        function updateCourseLang() {
            const titles = {
                en: {
                    title: "Lesson 1: Functions in Python",
                    avatar: "AI Tutor",
                    funcTitle: "Required Function",
                    funcCode: `def greet(name):\n    return f"Hello, {name}!"`,
                    funcDesc: "This function takes a name and returns a greeting. Use <code>return</code> to send back the result.",
                    editorTitle: "Try the Code Here",
                    chatTitle: "Interact with AI",
                    back: "Back to Home",
                    send: "Send",
                    check: "Check Code"
                },
                ar: {
                    title: "الدرس 1: دوال في Python",
                    avatar: "معلم AI",
                    funcTitle: "الدالة المطلوبة",
                    funcCode: `def greet(name):\n    return f"مرحباً، {name}!"`,
                    funcDesc: "هذه الدالة تأخذ اسمًا وتعيد تحية مخصصة. استخدم <code>return</code> لإرجاع الناتج.",
                    editorTitle: "جرب الكود هنا",
                    chatTitle: "تفاعل مع الذكاء الاصطناعي",
                    back: "رجوع للرئيسية",
                    send: "إرسال",
                    check: "تصحيح الكود"
                }
            };

            const lang = isArabic ? 'ar' : 'en';
            document.getElementById('lesson-title').textContent = titles[lang].title;
            document.getElementById('avatar').textContent = titles[lang].avatar;
            document.getElementById('func-title').textContent = titles[lang].funcTitle;
            document.getElementById('function-code').textContent = titles[lang].funcCode;
            document.getElementById('func-desc').innerHTML = titles[lang].funcDesc;
            document.getElementById('editor-title').textContent = titles[lang].editorTitle;
            document.getElementById('chat-title').textContent = titles[lang].chatTitle;
            document.getElementById('back-btn').textContent = titles[lang].back;
            document.getElementById('chat-send').textContent = titles[lang].send;
            document.getElementById('code-check').textContent = titles[lang].check;
            document.getElementById('chat-input').placeholder = isArabic ? "اكتب سؤالك..." : "Ask a question...";
            document.getElementById('code-editor').placeholder = isArabic ? "اكتب هنا... مثال: print(greet('أحمد'))" : "Write here... e.g., print(greet('Ahmed'))";
        }

        // استدعاء الدالة عند التحميل
        updateCourseLang();

        // ربط زر اللغة من الصفحة الرئيسية (إذا كان المستخدم جاي منها)
        // أو يمكن استخدام localStorage للحفاظ على اللغة
        window.addEventListener('load', () => {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('lang') === 'ar') {
                isArabic = true;
                document.body.classList.add('ar');
                document.documentElement.lang = 'ar';
                document.documentElement.dir = 'rtl';
                updateCourseLang();
            }
        });
    </script>
</body>
